<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#25429B"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editusername"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editpassword"
        android:layout_alignEnd="@+id/textView6"
        android:text="username"
        android:layout_alignRight="@+id/textView6"
        android:layout_marginBottom="34dp"
        android:layout_marginEnd="58dp"
        android:layout_marginRight="58dp"
        android:background="#FFF"
        android:ems="10"
    />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:layout_marginTop="104dp"
        android:gravity="center"

        android:text="Registration  Panel"
        android:textColor="#FFF"
        android:textSize="40dp" />

    <EditText
        android:id="@+id/edtname"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="#FFF"
        android:text="name"

        android:layout_above="@+id/editusername"
        android:layout_alignLeft="@+id/editusername"
        android:layout_alignStart="@+id/editusername"
        android:layout_marginBottom="24dp" />

    <EditText
        android:id="@+id/editpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/edtname"
        android:layout_alignStart="@+id/edtname"
        android:layout_marginTop="162dp"
        android:text="pass"
        android:layout_alignRight="@+id/edtname"
        android:layout_alignEnd="@+id/edtname" />



    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take Finger Print:"
        android:textColor="#FFF"

        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/edtname"
        android:layout_alignStart="@+id/edtname"
        android:layout_marginTop="35dp" />

    <Button
        android:id="@+id/btnregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginEnd="47dp"
        android:layout_marginRight="47dp"
        android:layout_marginTop="18dp"
        android:text="Register"
        android:layout_below="@+id/editusername"
        android:layout_alignRight="@+id/editpassword"
        android:layout_alignEnd="@+id/editpassword" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/fp1"
        android:layout_below="@+id/textView6"
        android:layout_alignRight="@+id/edtname"
        android:layout_alignEnd="@+id/edtname" />

</RelativeLayout>